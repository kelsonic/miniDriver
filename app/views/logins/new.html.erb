<div class="row">
  <div class="col s12 center">
    <h1 class="deep-orange-text">Login</h1>
  </div>
</div>

<div class="row">
  <div class="col s12 m8 offset-m2 l6 offset-l3 center">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="input-field">
        <%= f.label :username %>
        <%= f.email_field :username, class: "validate white-text" %>
      </div>

      <br/>

      <div class="input-field">
        <%= f.label :password %>
        <%= f.password_field :password, class: "validate white-text" %>
      </div>

      <br/>

      <%= f.submit "Login", class: "deep-orange btn waves-effect waves-orange" %>
    <% end %>
  </div>
</div>